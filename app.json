{
	"expo": {
		"name": "local-rides",
		"slug": "local-rides",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "localrides",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true
		},
		"android": {
			"adaptiveIcon": {
				"backgroundColor": "#E6F4FE",
				"foregroundImage": "./assets/images/android-icon-foreground.png",
				"backgroundImage": "./assets/images/android-icon-background.png",
				"monochromeImage": "./assets/images/android-icon-monochrome.png"
			},
			"edgeToEdgeEnabled": true,
			"predictiveBackGestureEnabled": false
		},
		"web": {
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/splash-icon.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#ffffff",
					"dark": {
						"backgroundColor": "#000000"
					}
				}
			],
			[
				"expo-location",
				{
					"locationAlwaysAndWhenInUsePermission": "This app needs access to location to track driver positions for ride services.",
					"locationAlwaysPermission": "This app needs access to location to track driver positions even when the app is in the background.",
					"locationWhenInUsePermission": "This app needs access to location to track driver positions for ride services.",
					"isIosBackgroundLocationEnabled": true,
					"isAndroidBackgroundLocationEnabled": true
				}
			]
		],
		"experiments": {
			"typedRoutes": true,
			"reactCompiler": true
		},
		"extra": {
			"supabaseUrl": "your-supabase-url",
			"supabaseAnonKey": "your-supabase-anon-key"
		}
	}
}
